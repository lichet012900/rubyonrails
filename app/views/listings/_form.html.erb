<%= form_for @listing, :html => {class: 'form-horizontal'} do |f| %>
<% if @listing.errors.any? %>
<div class='form-group'>
<div id='error_explanation'>
<h3>
	<%= pluralize(@listing.errors.count, "error") %>
	prohibited this listing from being saved. 
</h3>
</div>
</div>
<%end%>
<div class='form-group'>
	<div class='control-label col-md-2'>
		<%= f.label :title %>
	</div>
	<div class='col-md-6'>
		<%= f.text_field :title, {:class => 'form-control input-md', :maxlenght => '140'} %> 
	</div>
	</div>
	<div class='form-group'>
		<div class='control-label col-md-2'>
		<%= f.label :description %>
	</div>
	<div class='col-md-10'>
		<%= f.text_field :description, {:class => 'form-control input-md', :maxlenght => '255'} %> 
	</div>
	</div>
	<div class='form-group'>
		<div class='control-label col-md-2'>
		<%= f.label :price %>
	</div>
	<div class='col-md-2'>
		<%= f.text_field :price, {:class => 'form-control input-md', :maxlenght => '16'} %> 
	</div>
	</div>
	<div class='form-group'>
	<div class='col-md-12 text-center'>
		<%= f.submit "Save", class: 'btn btn-primary btn-md' %>
		</div>
		</div>

<% end %>